<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.osmdroid" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.wifi"
        android:required="false" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:configChanges="orientation|screenSize|keyboardHidden"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ecn_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- all applications based on this code should get their own Bing key -->

        <uses-library
            android:name="com.google.android.maps"
            android:required="false" />
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".map.MapActivity"
            android:icon="@drawable/ecn_icon"
            android:launchMode="singleTop"
            android:label="Camino Albergues Navigator" >
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleInstance" >
        </activity>

        <service
            android:name=".settings.UnZipService"
            android:exported="false" />
        <service
            android:name=".map.GeoService"
            android:exported="false" />

        <activity
            android:name=".stages.StageActivity"
            android:label="@string/title_activity_stage"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".settings.MapManagerActivity"
            android:label="@string/title_activity_map_manager"
            android:launchMode="singleTop" >
        </activity>

        <service android:name=".utils.DBUpdateService" >
        </service>


    </application>

</manifest>
